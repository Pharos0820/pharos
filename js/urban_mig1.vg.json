{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Urban Proportion by Country 2020",
  "width": 100,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Pharos0820/pharos/V2/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Pharos0820/pharos/V2/data/population_by_country_2020_1.csv"
        },
        "key": "Country",
        "fields": ["Population", "Migrants","Density","UrbanPop","Country"]
      }
    },
    {
      "calculate": "datum.Migrants * 100",
      "as": "Migrants Population * 100"
    },
    {
      "calculate": "datum.Population * datum.UrbanPop",
      "as": "Urban Pop"
    },
    {
      "calculate": "datum.Population * (1-datum.UrbanPop)",
      "as": "Rural Pop"
    },
    {"filter":"datum.UrbanPop != null"},
    {"fold": ["Urban Pop", "Rural Pop"]}
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "aggregate": "sum", "field": "value",
      "title": "population",
      "stack":  "normalize"
    },
    "x": {"field": "properties.CONTINENT"},
    "color": {
      "field": "key",
      "scale": {"range": ["#FF0000", "#3399FF"]}
    }
  }
}
