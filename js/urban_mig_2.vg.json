{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Urban Population and Migrants Proportion by Country 2020",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Pharos0820/pharos/V2/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Pharos0820/pharos/V2/data/population_by_country_2020_1.csv"
        },
        "key": "Country",
        "fields": ["Population", "Migrants","Density","UrbanPop","Country"]
      }
    },
    {
      "calculate": "datum.Migrants/datum.Density /100",
      "as": "Migrants_prop"
    },
    {
      "filter": "Continent_selection == null || datum.properties.CONTINENT ==       Continent_selection"
    }
  ],
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {"field": "UrbanPop", "type": "quantitative"},
    "y": {"field": "Migrants_prop", "type": "quantitative"},
    "color": {"field": "properties.CONTINENT", "type": "nominal"},
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Population", "type": "nominal"},
      {"field": "Migrants_prop", "type": "nominal"}
    ]
  }
}
